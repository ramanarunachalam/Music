.slider { width: 100%; min-height: 300px; display: block; position: relative; background: #FFF; overflow: hidden; }

.slider ul { list-style: none; }

.slider-content { float: left; width: 100%; display: block; overflow: auto; min-height: 650px; }

.slider-content ul { float: left; width: 100%; display: block; position: relative; padding: 0px; }

.slider-content ul li { float: left; width: 100%; text-shadow: 2px 2px 2px silver; }

.slider-content ul ul li a { padding: 5px 10px; display: block; border-bottom: 1px solid #f3f3f3; text-transform: capitalize; }

.slider-content ul ul li a:hover { background: #f3faff; border-color: #d5ebf9; }

.slider-content .title { padding: 5px 0; text-indent: 10px; background: #bbb; color: #fff; width: 100%; float: left; font-weight: bold; text-transform: uppercase; }

.slider-content .selected .title { background: #666; }

.slider .slider-nav { position: absolute; right: 0; top: 0; background: gray; min-height: 300px; }

.slider .slider-nav ul { padding: 5px 0; }

.slider .slider-nav li a { padding: 3px 3px; line-height: 20px; text-align: center; color: #fff; font-weight: bold; display: block; text-transform: uppercase; cursor: pointer; text-shadow: 2px 2px 2px silver; }

.slider #debug { position: absolute; bottom: 0; left: 0; padding: 5px; background: #000; color: #fff; }

.slider .arrow { font-size: 0px; line-height: 0%; width: 0px; border-bottom: 8px solid #fff; border-left: 5px solid gray; border-right: 5px solid gray; position: relative; top: 5px; }

.slider .down { border-bottom: none; border-top: 8px solid #fff; top: 15px; }

.slider .slide-up, .slider .slide-down { height: 20px; background: gray; text-align: center; cursor: pointer; float: right; width: 100%; position: relative; }


